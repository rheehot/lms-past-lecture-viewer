{
  "name": "LMS past online-lecture viewer",
  "version": "1.0",
  "description": "Extension for Hello LMS online past lecture video",
  "permissions": [
    "declarativeContent",
    "downloads",
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*"
    ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "./views/popup.html"
  },
  "manifest_version": 2
}